    <script type="text/javascript">
        function refreshTweets() {
            $.get('/latest', {since: window.latestTweet}, function(data) {
                    $('.latest').prepend(data);
                    
              $('.latest').slideDown('slow');
         
              setTimeout(refreshTweets, 5000);
            });
            
